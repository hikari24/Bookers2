<body>
	<div class="container">
	  <div class="row">
		<div class="col-md-6 col-md-offset-3">

		  <h1>Editing Book</h1>

		  <%= render "layouts/error_messages" %>

			<%= form_for(@book) do |f| %>
			  <div class="field-row">
			  	<div class="col-xs-12 ">
				 <%= f.label :Title %><br>
				 <%= f.text_field :title %>
				</div>
			  </div>
			 

			  <div class="field-row">
			   <div class="col-xs-12 ">
				<%= f.label :Opinion %><br>
				<%= f.text_area :body %>

			   </div>
			 </div>

			  <div class="action">
			  	<button class="btn btn-primary col-xs-12" type="submit">Update Book</button>

				<%= link_to 'Show', @book %>
				|
				<%= link_to 'Back', books_path %>
			 </div>

			<% end %>

			<div class="col-md-3"></div>

		</div>
	  </div>
	</div>

</body>