<body>
	<div class="container">
	  <div class="row">
		<div class="col-xs-6 col-xs-offset-3">

		  <h1>Editing Book</h1>

			<%= form_for(@book) do |f| %>
			  <div class="field-row">
			  	<div class="col-xs-12 ">
				 <label for="book_title">Title</label>
				 <%= f.text_field :title %>
				</div>
			  </div>
			 

			  <div class="field-row">
			   <div class="col-xs-12 ">
				<label for="book_body">Opinion</label>
				<%= f.text_area :body %>

			   </div>
			 </div>

			  <div class="action">
			  	<button class="bt btn-primary btn-block" type="submit">Update Book</button>

				<%= link_to 'Show', @book %>
				|
				<%= link_to 'Back', books_path %>
			 </div>

			<% end %>

			<div class="col-xs-3"></div>
		</div>

		</div>
	  </div>
	</div>

</body>