<body>

	<div class="container">

		 <%= render "layouts/error_messages" %>

		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>

						<table class="table">
							<tbody>
								<tr>
									<th>name</th>
									<th><%= @user.name %></th>
								</tr>
								<tr>
									<th>introduction</th>
									<th><%= @user.introduction %></th>
								</tr>
							</tbody>
						</table>

				<div class="row">
				 <% if @user.id == current_user.id %>

				 <%= link_to edit_user_path(@user) do %>
				  <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></span>
				 <% end %>

				 <% end %>
				</div>

				<h2>New book</h2>
				 <%= form_for(@book) do |f| %>
				  <div class="field-row">
				  	<div class="col-xs-12">
	 			  	 <label for="book_title">Title</label>
	 				  <%= f.text_field :title %>
	 				 </div>
				  </div>

				  <div class="field-row">
				  	<div class="col-xs-12">
	 				<label for="book_body">Opinion</label>
	 				 
	 				  <%= f.text_area :body %>
	 				 </div>
	 			  </div>
				 

				  <div class="action-row">
				  	<div class="col-xs-12">
  	 				 <button class="btn btn-primary btn-block" type="submit" >Create Book</button>
  	 				</div>
  				  </div>
				 <% end %>

			</div>

		<div class="col-xs-9">

			<h2>Books</h2>
				<table class="table">
	 				<thead>
	  					<tr>
	  					 <th></th>
						 <th>Title</th>
						 <th>Opinion</th>
	  					</tr>
					</thead>

					<tbody>
	 				 <%if @books.present? %>
	 				 <% @books.each do |book| %>
	  					<tr>
	  					 <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size: '40x40' %></td>
						 <td>
						 	<%= link_to book.title, book_path(book.id) %>
						 </td>
			    		 <td><%= book.body %></td>
	  					</tr>
	  					</tbody>
				
	 				 <% end %>
					 <% end %>
				</table>
		</div>
	  </div>
	</div>
</body>