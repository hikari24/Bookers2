<div class="container">
	<div class="row">
		<div class="col-md-3">
			<h2>User info</h2>
			<img class="">

			<h2>New book</h2>
				<%= form_for(@book,url: '/books') do |f| %>
				  <div class="field">
	 			  	<label for="book_title">Title</label>
	 				<%= f.text_field :title %>
				  </div>

				  <div class="field">
	 				<label for="book_body">Opinion</label>
	 				<%= f.text_field :body %>
				  </div>

				  <div class="action">
  	 				<button type="buttun" class="btn btn-primary">Create Book</button>
  				  </div>
				<% end %>

		</div>

		<div class="col-md-9">
			<h2>Book detail</h2>

			<table class>
				<tbody>
			  	 <tr>
      			  <td><p><%= @book.title %></p></td>
				  <td><p><%= @book.body %></p></td>
				 </tr>
			  </tbody>
			 </table>

		</div>
	</div>
</div>