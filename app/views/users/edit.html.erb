<div class="container">

<h2>User info</h2>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <%= form_for(@user) do |f| %>

  <!--アカウント編集時に名前を入力できるようにフォームを追加-->
      <div class="field">
        <label for="user_name">Name</label>
          <%= f.text_field :name %>
      </div>

      <div class="field">
        <label for="profile_image">Image</label>
          <%= f.attachment_field :profile_image %>
      </div>

  <!--アカウント編集時にプロフィールを入力できるようにフォームを追加-->
      <div class="field">
        <label for="introductin">Introduction</label>
          <%= f.text_area :introduction %>
      </div>

      <div class="actions">
        <%= f.submit "Update User" %>
      </div>
   <% end %>

</div>