<body>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img" %>



				<table class="table">
				 <tbody>
						<tr>
							<th>name</th>
							<th><%= @user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
					</tbody>
				</table>

				<div class="row">
				 <% if @user.id == current_user.id %>

				 <%= link_to edit_user_path(@user) do %>
				  <span class="col-md-12 btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></span>
				 <% end %>

				 <% end %>
				</div>


			<h2>New book</h2>
				<%= form_for(@book) do |f| %>
				  <div class="field-row">
	 			  	<label for="book_title">Title</label>
	 			  	 <div class="col-md-12">
	 				  <%= f.text_field :title %>
	 				 </div>
				  </div>

				  <div class="field-row">
	 				<label for="book_body">Opinion</label>
	 				 <div class="col-md-12">
	 				  <%= f.text_area :body %>
	 				 </div>
				  </div>

				  <div class="action-row">
				  	<div class="col-md-12">
				  	 <button type="submit" class="btn btn-primary">Create Book</button>
				  	</div>
  				  </div>
				<% end %>


		</div>
		<div class="col-md-9">
			<h2>Users</h2>
			<div class="table">
				<thead>
				 <tr>
				 	<th>Image</th>
				 	<th>name</th>
				 	<th colspan="3"></th>
				 </tr>
				</thead>

				<tbody>
				 <% @users.each do |user| %>

			  	  <tr>
			  	  	<td></td>
			  	 	<td><%= @user.name %></td>
				  	<td><%= link_to 'Show', user_path(user) %></td>
				  </tr>
				 </tbody>
				 <% end %>
			</div>
		</div>
	</div>
