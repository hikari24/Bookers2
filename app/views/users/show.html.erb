<body>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<h2>User info</h2>
			
			<h2>New book</h2>
				<%= form_for(@book, url: '/books') do |f| %>
				  <div class="field">
	 			  	<label for="book_title">Title</label>
	 				<%= f.text_field :title %>
				  </div>

				  <div class="field">
	 				<label for="book_body">Opinion</label>
	 				<%= f.text_field :body %>
				  </div>

				  <div class="action">
  	 				<button type="buttun" class="btn btn-primary">Create Book</button>
  				  </div>
				<% end %>


		</div>
		<div class="col-md-9">
			<h2>Books</h2>
			<table class>
			  <thead>
			  	<tr>
				<th>Title</th>
				<th>Opinion</th>
				</tr>
			  </thead>
			  <tbody>
			  	<%if @books.present? %>
	            <% @books.each do |book| %>
			  	<tr>
			  	  <td><%= book.title %></td>
			  	  <td><%= book.body %></td>

			  	</tr>
			  	<% end %>
			    <% end %>
			  </tbody>
			</table>
		</div>
	</div>
</div>

</body>